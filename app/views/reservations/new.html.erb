<style>
body {
    background-image: linear-gradient(to top, #af9cf2 0%, #ffffff 85%);
    height: 100%;
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
}
</style>
<div class="container mt-4">
  <div class="row">
    <div class="col-md-8">
      <div class="card h-100 shadow">
      <div class="card-body">
      <h2 class="text-center stylish-color-dark font-weight-bold text-uppercase">Contact Us</h2> 
      <br>
      <br>
      
          <p class="text-center">Walk-in's are welcome but due to high volume of custumers apointment are preferred. </p>
      
      <div class="row">
        <div class="col-md-1">
        </div>
        <div class="col-md-6 mt-4">
          <h4 class="text-muted">Business Information</h4>
          <hr>
          <div class="text">
            <i class="fa fa-home fa-lg"></i>  <%= business_info.name %><br>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= business_info.street %>, <br>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= business_info.city %>, <%= business_info.state %> <br>
               &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= business_info.zipcode %>, <%= business_info.country %><br>
            <i class="fa fa-phone fa-lg"></i> <%= business_info.phone %><br><br>
            <i class="fa fa-envelope fa-lg"></i> <span><a href="mailto:<%= business_info.email %>"><%= business_info.email %></a></span>
          </div>
        </div>
        <div class="col-md-4 mt-4">
          <h4 class="text-muted">Hours of Operation</h4>
          <hr>
            <table class="table-responsive table-striped mt-3 table-hover">
              <thead>
                <tr>
                  <th>Date</th>
                  <th>Hours</th>
             
                </tr>
              </thead>
              <tbody>
                <% business_info.business_hours.each do |hours| %>
                  <tr>
                    <td><%= hours.day %></td>
                    <td><%= hours.open_time.strftime("%H:%M") %> - <%= hours.close_time.strftime("%H:%M") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
           <p class="text-muted text-center"><small>**Closed Sundays**</small></p>

           <p class="text-success text-center"><%= open_now %> </p>
        </div>
      </div>
    </div>
    </div> 
  </div>
    <div class="col-md-4">
      <div class="card h-100 shadow">
        <h3 class="text-center mt-4 stylish-color-dark font-weight-bold text-uppercase">Reservation Request</h3> 
        <center><p id="notice"><%= notice %></p></center>
        <div class="card-body">
        	<%= render partial:"/reservations/form" %>
        </div>
      </div>
    </div>
  </div>
</div>
<br>
