
<%= simple_form_for(@business) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :street %>
    <%= f.input :city %>
    <%= f.input :state %>
    <%= f.input :country %>
    <%= f.input :phone %>
    <%= f.input :zipcode %>
    <%= f.input :email %>
    <%= f.input :facebook %>
    <%= f.input :instagram %>
    <%= f.input :youtube %>
    <%= f.input :twitter %>
    <%= f.input :logo %>
    <%= f.input :operator %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
