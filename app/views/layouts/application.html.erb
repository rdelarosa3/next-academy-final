<!DOCTYPE html>
<html>
  <head>
    <title>VisibleElegance</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <!-- font awesome style sheets -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.2.0/css/all.css" integrity="sha384-hWVjflwFxL6sNzntih27bfxkr27PmbbK/iSvJ+a4+0owXq79v+lsFkW54bOGbiDQ" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    
    <style type="text/css">
      a{
        color: black;
        text-decoration: none;
      }
      body {
         padding-bottom:60px;   /* Height of the footer */
      }
      footer {
         position:absolute;
         /*bottom:0;*/
         width:100%;
      }


      .or-seperator {
          margin: 20px 0 10px;
          text-align: center;
          border-top: 1px solid #ccc;
      }
      .or-seperator i {
          padding: 0 10px;
          background: #ffffff;
          position: relative;
          top: -11px;
          z-index: 1;
      }

    </style>

  </head>

  <body id="page-top">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light shadow-sm w-100" id="mainNav">
      <div class="container">
        <%= link_to "VisibleElegance", root_path, class: "navbar-brand js-scroll-trigger font-weight-bold " %>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
          Menu
          <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav text-uppercase ml-auto">
            <li class="nav-item">
              <%= link_to "Services", services_path, class: "nav-link js-scroll-trigger" %>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#portfolio">Portfolio</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#about">About</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#team">Team</a>
            </li>
            <li class="nav-item">
              <a class="nav-link js-scroll-trigger" href="#contact">Contact</a>
            </li>
            <% if logged_in? %>
              <!-- while logged in -->
              <li class="nav-item">
                <%= link_to 'Sign out', log_out_path, class: "nav-link", method: :delete %>
              </li>
              <li> 
                <%if current_user.avatar.present? %>          
                <%= image_tag(current_user.avatar_url,class: 'rounded-circle',width: '30', height: '30')%>
                <% end %>
              </li>
              <% else %>
                <!-- while logged out -->
                <% if controller_name == "sessions" || controller_name == "users" %>
                <li></li>
                <% else %>
                <li class="nav-item">
                  <%= link_to 'Create Account', sign_up_path, class: "nav-link"%>
                </li>
                <li class="nav-item">
                  <a href="#" data-target="#sign-in" data-toggle="modal" class="nav-link">Sign In</a>
                </li>
                <% end %>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
    <!-- !Navigation -->
    <%= yield %>

    <!---------------- Sign in Modal ---------------------->

      <div class="modal fade" id="sign-in" tabindex="0">
          <div class="modal-dialog modal-dialog-centered">
              <div class="modal-content">
                  <div class="modal-header">
                      <h4 class="modal-title"> Sign In </h4>
                      <button class="close" data-dismiss="modal">&times;</button>
                  </div>
                      <div class="modal-body">
                        <%= simple_form_for :session, url: session_path, defaults: {required:false} do |f| %>
                          <%= f.input :email, placeholder: 'user@domain.com' %>              
                          <%= f.input :password, hint: 'No special characters.' %>
                          <%= f.button :submit, class:"btn btn-success btn-block" %>
                           <div class="or-seperator"><i>or</i></div>
                          <a href="/auth/google_oauth2" class="btn btn-danger btn-block"><i class="fab fa-google" aria-hidden="true"></i> Sign in with <b>Google</b></a>
                          <a href="/auth/facebook" class="btn btn-primary btn-block"><i class="fab fa-facebook" aria-hidden="true"></i> Sign in with <b>Facebook</b></a>
                        <% end %>
                        <br>
                        <% if Clearance.configuration.allow_sign_up? %>
                          <p class="hint-text text-center small text text-muted">Don’t have an account? <%= link_to 'Sign up', sign_up_path, class: "text-success" %></p>
                        <% end %>
                      </div>
                  </div>
              </div>
          </div>
      </div>
        
    <!---------------- !Sign in Modal ---------------------->  


    <!------------ Footer ------------>
    <footer class="page-footer font-small stylish-color-dark">
      <% if controller_name == "sessions" || controller_name == "users" %>
      <div></div>
      <% else %>
        <!-- Footer Links -->
        <div class="container text-center text-md-left">
          <div class="row">
            <!-- Grid column -->
            <div class="col-md-6 mx-auto">

              <!-- Links -->
              <h3 class="font-weight-bold text-uppercase mt-3 mb-4">_____ <br>Featured content</h3>

              <ul class="list-unstyled">
                <li>
                  <a href="#!">Link 1</a>
                </li>
                <li>
                  <a href="#!">Link 2</a>
                </li>
                <li>
                  <a href="#!">Link 3</a>
                </li>
                <li>
                  <a href="#!">Link 4</a>
                </li>
              </ul>

            </div><!-- Grid column -->

            <hr class="clearfix w-100 d-md-none">
            <div class="col-md-6 mx-auto">
              <!------------Contact ------------>
              <h3 class="font-weight-bold text-uppercase mt-3 mb-4" id="contact">_____ <br>contact info</h3>
              <p>Please feel free to get in touch with us for any inquiries regarding our services and products.</p>
              <div class="pull-left ml-3 mr-4">
                <img src="https://dumielauxepices.net/sites/default/files/logos-clipart-hair-668873-47372.jpg" style="width:200px;height:150px">
              </div>
              <div>
                <p>
                  <small>
                    <i class="fa fa-home fa-lg"></i> Visible Elegance Hair Salon<br>
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;115 McCauley Ave, <br>
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;San Antonio, TX <br>
                       &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;78221, USA<br>
                    <i class="fa fa-phone fa-lg"></i> +1 (210) 924-5700<br><br>
                    <i class="fa fa-envelope fa-lg"></i> <span><a href="mailto:info@visibleelegancehairsalon.com">info@visible-elegance.com</a></span>
                  </small>     
                </p>
              </div>
            </div>
          </div><!-- Grid row -->
        </div>
        <!-- Footer Links -->
        <% end %>
        <hr>
        <!------------ Social buttons ------------>
        <ul class="list-unstyled list-inline text-center">
          <li class="list-inline-item">
            <a href="https://web.facebook.com/Visible-Elegance-Hair-Salon-138734002813915/?_rdc=1&_rdr" class="btn-floating btn-fb mx-1" target="_blank">
              <i class="fab fa-facebook fa-3x"> </i>
            </a>
          </li>
          <li class="list-inline-item">
            <a href="https://www.instagram.com/explore/tags/visibleelegancehairsalon/" class="btn-floating btn-tw mx-1" target="_blank">
              <i class="fab fa-instagram fa-3x"> </i>
            </a>
          </li>

          <li class="list-inline-item">
            <a class="btn-floating btn-li mx-1">
              <i class="fab fa-youtube fa-3x"> </i>
            </a>
          </li>
        </ul>
        <!------------ !Social buttons ------------>
        <!-- Copyright -->
        <div class="footer-copyright text-center text-muted"><small>© 2018 Copyright:
          <a href="#" class="text-muted"> visible-elegance.com</a></small>
        </div>
    </footer>
    <!------------ !Footer ------------>
  </body>
</html>
